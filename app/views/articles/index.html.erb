<div class="container">
  <h1>Articles</h1>
  <h3><%= link_to 'Add New Article', new_article_path() %></h3>
  <ul>
    <% @articles.each do |article| %>
        <li>
            <h2><%= link_to article.title, article_path(article) %></h2>
            <p><%= article.content.first(150) %>...</p>
            <p><%= link_to "Delete",
            article_path(article),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>
        </li>
    <%end %>
  </ul>
</div>
